<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="player"
            type="com.ranseo.yatchgame.data.model.Player" />

        <variable
            name="viewModel"
            type="com.ranseo.yatchgame.ui.game.GamePlayViewModel" />

        <variable
            name="board"
            type="com.ranseo.yatchgame.data.model.Board" />

        <variable
            name="emoji"
            type="int" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="9dp">

        <ImageView
            android:id="@+id/name_tag"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            tools:src="@drawable/name_tag_rabbit_reverse"
            setProfileSrcReverse="@{viewModel.nameTagImages[1]}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <TextView
            android:text="@{player.name}"
            tools:text="란서"
            android:id="@+id/tv_player_name"
            android:layout_marginEnd="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/name_tag"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_total_under_first_profile"
            android:text="@{Integer.toString(board.total)}"
            android:visibility="@{emoji > 0 ? View.GONE : View.VISIBLE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/board_second_score"
            android:textSize="60sp"
            tools:text="256"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/name_tag"
            app:layout_constraintEnd_toEndOf="@id/name_tag"
            app:layout_constraintTop_toBottomOf="@id/tv_player_name"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_tag"
            android:visibility="@{emoji > 0 ? View.VISIBLE : View.GONE}"
            >

            <ImageView
                android:id="@+id/iv_chat_dialog"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/chat_dialog_reverse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/iv_emoji"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:src="@drawable/emoji_surprised"
                android:layout_marginTop="12dp"
                setEmoji="@{emoji}"
                app:layout_constraintStart_toStartOf="@id/iv_chat_dialog"
                app:layout_constraintEnd_toEndOf="@id/iv_chat_dialog"
                app:layout_constraintTop_toTopOf="@id/iv_chat_dialog"
                app:layout_constraintBottom_toBottomOf="@id/iv_chat_dialog"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>