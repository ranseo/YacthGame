<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="board"
            type="com.ranseo.yatchgame.data.model.Board" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <TextView
            android:text="@{Integer.toString(board.ones)}"
            android:background="@drawable/board_list_border_line"
            tools:text="1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.twos)}"
            android:background="@drawable/board_list_border_line"
            tools:text="2"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.threes)}"
            android:background="@drawable/board_list_border_line"
            tools:text="3"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.fours)}"
            android:background="@drawable/board_list_border_line"
            tools:text="4"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp"/>

        <TextView
            android:text="@{Integer.toString(board.fives)}"
            android:background="@drawable/board_list_border_line"
            tools:text="5"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp"/>

        <TextView
            android:text="@{Integer.toString(board.sixes)}"
            android:background="@drawable/board_list_border_line"
            tools:text="6"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />


        <TextView
            android:text="@{Integer.toString(board.sum)}"
            android:background="@drawable/board_list_border_line"
            tools:text="63"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.bonus)}"
            android:background="@drawable/board_list_border_line"
            tools:text="36"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

    </LinearLayout>
</layout>