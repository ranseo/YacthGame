<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="board"
            type="com.ranseo.yatchgame.data.model.Board" />


    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@{Integer.toString(board.choice)}"
            tools:text="1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="49dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.fourCard)}"
            tools:text="2"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="49dp"
            android:layout_height="32dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="@{Integer.toString(board.fullHouse)}"
            tools:text="3"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="49dp"
            android:layout_height="32dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="@{Integer.toString(board.smallStraight)}"
            tools:text="4"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="49dp"
            android:layout_height="32dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:text="@{Integer.toString(board.largeStraight)}"
            tools:text="5"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="49dp"
            android:layout_height="32dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:text="@{Integer.toString(board.yacht)}"
            tools:text="6"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="49dp"
            android:layout_height="32dp"
            android:layout_marginTop="3dp" />

    </LinearLayout>
</layout>