<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="board"
            type="com.ranseo.yatchgame.data.model.Board" />


    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:paddingStart="0dp">

        <TextView
            android:text="@{Integer.toString(board.choice)}"
            android:background="@drawable/board_list_border_line"
            tools:text="1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.fourCard)}"
            android:background="@drawable/board_list_border_line"
            tools:text="2"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp"/>

        <TextView
            android:text="@{Integer.toString(board.fullHouse)}"
            android:background="@drawable/board_list_border_line"
            tools:text="3"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp"/>

        <TextView
            android:text="@{Integer.toString(board.smallStraight)}"
            android:background="@drawable/board_list_border_line"
            tools:text="4"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp"/>

        <TextView
            android:text="@{Integer.toString(board.largeStraight)}"
            android:background="@drawable/board_list_border_line"
            tools:text="5"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.yacht)}"
            android:background="@drawable/board_list_border_line"
            tools:text="6"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="34dp" />

        <TextView
            android:text="@{Integer.toString(board.total)}"
            android:background="@drawable/board_list_border_line"
            tools:text="63"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="42dp"
            android:layout_height="68dp" />



    </LinearLayout>
</layout>