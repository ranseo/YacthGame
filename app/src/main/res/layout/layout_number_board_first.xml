<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="realBoard"
            type="com.ranseo.yatchgame.data.model.Board" />

        <variable
            name="fakeBoard"
            type="com.ranseo.yatchgame.data.model.Board" />

        <variable
            name="onClickListener"
            type="com.ranseo.yatchgame.data.model.OnBoardClickListener" />

        <variable
            name="boardRecord"
            type="com.ranseo.yatchgame.data.model.BoardRecord" />

        <variable
            name="myTurn"
            type="boolean" />

        <import type="com.ranseo.yatchgame.data.model.BoardTag"/>
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/Theme.GameBoardFirst"
        >

        <TextView
            tools:text="ë‚˜"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/board_list_border_line_yellow"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>

        <TextView
            android:text="@{Integer.toString(realBoard.ones)}"
            android:background="@drawable/board_list_border_line_yellow"
            android:visibility="@{boardRecord.isOnes ? View.VISIBLE : View.GONE}"
            tools:text="1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>


        <TextView
            android:text="@{fakeBoard.ones>-1 ? Integer.toString(fakeBoard.ones) : Character.toString(' ')}"
            android:background="@drawable/board_list_border_line_yellow"
            android:onClick="@{()->onClickListener.onClick(BoardTag.ONES)}"
            android:visibility="@{boardRecord.isOnes ? View.GONE : View.VISIBLE}"
            app:fakeBoard="@{fakeBoard.ones}"
            app:myTurn="@{myTurn}"
            android:textColor="@color/board_score_color_before_record"
            tools:text="1"
            tools:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>

        <!---->


        <TextView
            android:text="@{Integer.toString(realBoard.twos)}"
            android:background="@drawable/board_list_border_line_yellow"
            android:visibility="@{boardRecord.isTwos ? View.VISIBLE : View.GONE}"
            tools:text="2"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:text="@{fakeBoard.twos>-1 ? Integer.toString(fakeBoard.twos) : Character.toString(' ')}"
            android:background="@drawable/board_list_border_line_yellow"
            android:onClick="@{()->onClickListener.onClick(BoardTag.TWOS)}"
            android:visibility="@{boardRecord.isTwos ? View.GONE : View.VISIBLE}"
            app:fakeBoard="@{fakeBoard.twos}"
            app:myTurn="@{myTurn}"
            android:textColor="@color/board_score_color_before_record"
            tools:text="1"
            tools:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>

        <!---->


        <TextView
            android:text="@{Integer.toString(realBoard.threes)}"
            android:background="@drawable/board_list_border_line_yellow"
            android:visibility="@{boardRecord.isThrees ? View.VISIBLE : View.GONE}"
            tools:text="3"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:text="@{fakeBoard.threes>-1 ? Integer.toString(fakeBoard.threes) : Character.toString(' ')}"
            android:background="@drawable/board_list_border_line_yellow"
            android:onClick="@{()->onClickListener.onClick(BoardTag.THREES)}"
            android:visibility="@{boardRecord.isThrees ? View.GONE : View.VISIBLE}"
            app:fakeBoard="@{fakeBoard.threes}"
            app:myTurn="@{myTurn}"
            android:textColor="@color/board_score_color_before_record"
            tools:text="1"
            tools:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>

        <!---->

        <TextView
            android:text="@{Integer.toString(realBoard.fours)}"
            android:background="@drawable/board_list_border_line_yellow"
            android:visibility="@{boardRecord.isFours ? View.VISIBLE : View.GONE}"
            tools:text="4"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:text="@{fakeBoard.fours>-1 ? Integer.toString(fakeBoard.fours) : Character.toString(' ')}"
            android:background="@drawable/board_list_border_line_yellow"
            android:onClick="@{()->onClickListener.onClick(BoardTag.FOURS)}"
            android:visibility="@{boardRecord.isFours ? View.GONE : View.VISIBLE}"
            app:fakeBoard="@{fakeBoard.fours}"
            app:myTurn="@{myTurn}"
            android:textColor="@color/board_score_color_before_record"
            tools:text="4"
            tools:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <!---->

        <TextView
            android:text="@{Integer.toString(realBoard.fives)}"
            android:background="@drawable/board_list_border_line_yellow"
            android:visibility="@{boardRecord.isFives ? View.VISIBLE : View.GONE}"
            tools:text="5"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:text="@{fakeBoard.fives>-1 ? Integer.toString(fakeBoard.fives) : Character.toString(' ')}"
            android:background="@drawable/board_list_border_line_yellow"
            android:onClick="@{()->onClickListener.onClick(BoardTag.FIVES)}"
            android:visibility="@{boardRecord.isFives ? View.GONE : View.VISIBLE}"
            app:fakeBoard="@{fakeBoard.fives}"
            app:myTurn="@{myTurn}"
            android:textColor="@color/board_score_color_before_record"
            tools:text="5"
            tools:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <!---->

        <TextView
            android:text="@{Integer.toString(realBoard.sixes)}"
            android:background="@drawable/board_list_border_line_yellow"
            android:visibility="@{boardRecord.isSixes? View.VISIBLE : View.GONE}"
            tools:text="6"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:text="@{fakeBoard.sixes>-1 ? Integer.toString(fakeBoard.sixes) : Character.toString(' ')}"
            android:background="@drawable/board_list_border_line_yellow"
            android:onClick="@{()->onClickListener.onClick(BoardTag.SIXES)}"
            android:visibility="@{boardRecord.isSixes? View.GONE : View.VISIBLE}"
            app:fakeBoard="@{fakeBoard.sixes}"
            app:myTurn="@{myTurn}"
            android:textColor="@color/board_score_color_before_record"
            tools:text="6"
            tools:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <!---->

        <TextView
            android:text="@{Integer.toString(realBoard.sum)}"
            android:background="@drawable/board_list_border_line_yellow"
            tools:text="63"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:text="@{realBoard.bonus>0 ? Integer.toString(realBoard.bonus) : Character.toString('-')}"
            android:background="@drawable/board_list_border_line_yellow"
            tools:text="36"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp" />



    </LinearLayout>
</layout>