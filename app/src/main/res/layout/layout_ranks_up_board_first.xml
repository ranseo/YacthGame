            tools:visibility="gone"
            android:background="@drawable/board_list_border_line_yellow"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="1" />

        <!-- -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/board_list_border_line_yellow"
            android:gravity="center"
            android:text="@{Integer.toString(realBoard.total)}"
            android:textAlignment="center"
            tools:text="63" />


    </LinearLayout>
</layout>