            tools:visibility="gone"
            android:background="@drawable/board_list_border_line_yellow"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="1" />

        <!-- -->

        <TextView
            android:text="@{Integer.toString(realBoard.smallStraight)}"
            android:visibility="@{boardRecord.smallStraight? View.VISIBLE : View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="34dp"
