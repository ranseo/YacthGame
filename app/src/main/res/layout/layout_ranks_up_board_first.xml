            android:layout_height="34dp"
            android:background="@drawable/board_list_border_line_yellow"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="5" />

        <TextView
            android:text="@{ fakeBoard.largeStraight > -1 ? Integer.toString(fakeBoard.largeStraight) : Character.toString(' ')}"
