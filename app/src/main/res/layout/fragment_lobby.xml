<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.ranseo.yatchgame.ui.lobby.LobbyViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.lobby.LobbyFragment">

        <ImageView
            android:id="@+id/iv_tmp_animation"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|center"

            android:layout_marginTop="?attr/actionBarSize"
            />

        <TextView
            android:text="@string/yacth_dice_room_list"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lobby_room_rec"
            android:background="@drawable/room_list_border_line"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:elevation="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="8"
            tools:listitem="@layout/list_item_room_robby"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_make_room"
            android:onClick="@{()->viewModel.onRoomMakeBtn()}"
            android:text="방 만들기"
            android:textColor="@color/white"
            android:background="@color/black"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="32dp"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>