{
  "rules": {
    "player" : {
      "$uid" : {
        ".read" : "auth != null && auth.uid == $uid",
        ".write" : "auth != null && auth.uid == $uid"
      }
    },

    "lobby" : {
      ".read" : "auth != null && root.child('player').child(auth.uid).exists()",
      ".write" : "auth != null && root.child('player').child(auth.uid).exists()"
    },

    "waiting" : {
      "$roomId" : {
        ".read" : "auth != null",
        ".write" : "auth != null"
      }
    },

    "gameInfo" : {
      "$gameId" : {
        ".read" : "auth != null",
        ".write" : "auth != null"
      }
    },

    "rollDice" : {
      "$gameId" : {
        ".read" : "auth!=null",
        ".write" : "auth!=null"
      }
    },

    "turnCount" : {
      "$gameId" : {
        ".read" : "auth!=null",
        ".write" : "auth!=null"

      }
    },

    "boardInfo": {
      "$gameId" : {
        ".read" : "auth!=null",
        ".write" : "auth!=null"
      }
    },

    "emoji": {
      "$gameId" : {
        ".read" : "auth != null",
        ".write": "auth != null"
      }
    },

    "rematch" : {
      "$uid" :{
        ".read" : "auth != null && $uid == auth.uid",
        ".write" : "auth != null"
      }
    },

    "rematchResult" : {
      "$uid" : {
        ".read" : "auth != null && $uid == auth.uid",
        ".write" : "auth != null"
      }
    },

    "log" : {
      "$uid" : {
        "$tag" : {
          ".read" : "auth!=null && $uid == auth.uid",
          ".write" : "auth != null"
        }
      }
    }
  }
}