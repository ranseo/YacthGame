{
  "rules": {
    "player" : {
      "$uid" : {
        ".read" : "auth != null && auth.uid == $uid",
        ".write" : "auth != null && auth.uid == $uid"
      }
    },

    "lobby" : {
      ".read" : "auth != null && root.child('player').child(auth.uid).exists()",
      ".write" : "auth != null && root.child('player').child(auth.uid).exists()"
    },

    "waiting" : {
      "$roomId" : {
        ".read" : "auth != null",
        ".write" : "auth != null"
      }
    },

    "gameInfo" : {
      "$gameId" : {
        ".read" : "auth != null",
        ".write" : "auth != null"
      }
    },

    "rollDice" : {
      "$gameId" : {
        ".read" : "auth!=null",
        ".write" : "auth!=null"
      }
    }
  }
}